<% layout("/layouts/boilerplate") %>

<div  style="height:27.8rem" class="row mt-10 ">
    
    <div style="margin-top:5rem;" class="col-8 offset-2">
        <h1 class=" col-8 offset-3 "> Login on Wanderlust</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3" >
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter username " id="username" class="form-control" required> 
                 
            </div>
           
            
            <div class="mb-3" >
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" placeholder="Enter password " id="password" class="form-control" required> 
                 
            </div>
            <button class="btn btn-success"> Login </button>
        </form>
    </div>
</div>


 
