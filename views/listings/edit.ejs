<% layout("/layouts/boilerplate") %>

 <div class="row mt-3">
    <div class="col-6 offset-2">
    <h3>Edit your Listing :</h3>
    <form method="post" action="/listings/<%= editdata.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" value="<%=editdata.title%>" required>
            <div class="valid-feedback">
                Title Looks good!
               </div>
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label" >Description</label>
            <textarea name="listing[description]" class="form-control"  required><%=editdata.description%></textarea>
        <div class="invalid-feedback">
                Please Enter a short Description
              </div>
        </div>
        <div class="mb-3">
          <b>Original Image </b><br>
          <img src=<%=originalImageUrl %> /> 
        </div>
        <div class="mb-3">
            <label for="Image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image]" class="form-control"  >
            <div class="invalid-feedback">
                Please Insert an Image
              </div>
            </div>
        <div class="row mb-0">
            <div class="mb-3 col-md-4">
                 <label for="Price" class="form-label">Price</label>
                 <input type="number" name="listing[price]" class="form-control" value="<%=editdata.price%>" required>
                 <div class="invalid-feedback">
                Enter a valid price
              </div>
                 </div>
            <div class="mb-3 col-md-8">
                <label for="Country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" value="<%=editdata.country%>" required>
                <div class="invalid-feedback">
                Please Enter a valid Country
              </div>
                </div>
        
        </div>
         <div class="mb-3">
            <label for="Location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" value="<%=editdata.location%>" required>
            <div class="invalid-feedback">
                Please Enter a valid location
              </div>
            </div>
         
       <button class=" btn btn-dark add-btn mt-3">Edit </button>
        </form>
</div>
</div>
