<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="row mt-3">
    <div class="col-6 offset-3">
    <h3>Listing Details : </h3>
    </div>
<div class="card col-6 offset-3">
    <img src="<%=showdata.image.url%>" class="card-img-top show-img" alt="Listing_image">
    <div class="card-body show-body">
    <p class="card-text">
        <i>Owned by  <%= showdata.owner.username %> </i>
    </br>
        <b><%= showdata.title %></b><br>
        <%= showdata.description %><br>
        &#x20B9; <%= showdata.price.toLocaleString("en-IN") %>
        <i> + 18 GST </i><br>
        <%= showdata.location %><br>
        <%= showdata.country %><br>
    </p>
    </div>
</div>
<br>
<br/>

<% if(curruser && showdata.owner._id.equals(curruser._id)) {%>
<div class="btns">
    <a href="/listings/<%= showdata.id %>/edit" class="btn btn-dark col-1 offset-3 add-btn" >Edit</a>
    
    <form method="post" action="/listings/<%= showdata.id%>?_method=DELETE">
    <button class="btn btn-dark offset-5 ">Delete </button>
    </form>
   </div>
<% } %> 
   <div>
    <hr>

    <% if(curruser) {%> 
    <h4>Leave the Review </h4>
    <form action="/listings/<%= showdata.id%>/reviews " method="post"   >
        <div class="mb-3 mt-3"> 
        <fieldset class="starability-slot">   
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div>
            <label for="comment" class="form-label">Comments</label>
            <textarea class="form-control" name="review[comment]" id="comment" cols="5" rows="6" required></textarea>
            <div class="invalid-feedback">
               Please Fill The feedback !
            </div>
        </div><br>
        <button class="btn btn-outline-dark" >Submmit</button>
    </form>
    <% } %>
    <hr>
     
   <% if(showdata.reviews.length > 0) { %>
    <h4>All Reviews</h4>
    <br>
<ul>
    <div class="review">
    <%for( review of showdata.reviews ) {%> 
    <div class="review-card " style="width: 18rem;">
            <h4 class="card-title"><%= review.author.username %></h4>
                <p class="card-text"> <li> <%= review.comment %> </li></p>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <form class="mb-3" method="POST" action="/listings/<%=showdata._id%>/reviews/<%= review._id%>?_method=DELETE">
                <button class="btn btn-outline-dark" >Delete</button>
                </form>
            </div>
    <%}%>
</div>
</ul>
<% } %> 
</div>
<div class="col-8 offset-0 mb-3"> 
    <h3> where you'll be </h3>
    <div id="map"></div>
</div>
</div>
<script src="/js/map.js">
    
</script>
